{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make truck",
			"command": "mingw32-make.exe",
			"args": [
				"truck"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
	
		{
			"label": "clean",
			"command": "mingw32-make.exe",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},	
	]
}